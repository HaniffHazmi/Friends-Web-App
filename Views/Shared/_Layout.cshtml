<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Friends_Web_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Friends_Web_App.styles.css" asp-append-version="true" />
    <style>
        .horizontal-content {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            background: rgba(255, 255, 255, 0.9);
            padding: 10px 0;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 1000;
            margin-bottom: 20px;
        }

            .horizontal-content a {
                text-decoration: none;
                color: #007bff;
                font-weight: bold;
                font-size: 18px;
            }

                .horizontal-content a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="horizontal-content">
        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a asp-area="" asp-controller="Friend" asp-action="List">Friend</a>
        <a asp-area="" asp-controller="Hobby" asp-action="List">Hobbies</a>
        <a asp-area="" asp-controller="Places" asp-action="List">Places</a>
        <a asp-area="" asp-controller="Food" asp-action="List">Food</a>
        <a asp-area="" asp-controller="GroupTask" asp-action="List">Group Task</a>
        <a asp-area="" asp-controller="BucketList" asp-action="List">Bucket List</a>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>